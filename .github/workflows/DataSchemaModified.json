{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Restaurant DB Physical Schema (MongoDB)",
  "description": "Describes three main collections: users, menus, orders.",
  "type": "object",
  "properties": {
    "users": {
      "type": "array"
      "description": "User collection (Clients and Waiters)",
      "items": {
        "title": "User",
        "type": "object",
        "properties": {
          "_id": { "type": "string", "pattern": "^[0-9a-fA-F]{24}$" },
          "login": {
            "type": "string",
            "description": "Unique login (3-20 chars: a-z, 0-9, _, -)",
            "pattern": "^[a-zA-Z0-9_-]{3,20}$"
          },
          "role": {
            "type": "string",
            "enum": ["Client", "Waiter"]
          }
        },
        "required": ["login", "role"]
      }
    },
    "menus": {
      "type": "array",
      "description": "Menu collection (with embedded dishes)",
      "items": {
        "title": "Menu",
        "type": "object",
        "properties": {
          "_id": { "type": "string", "pattern": "^[0-9a-fA-F]{24}$" },
          "dishes": {
            "type": "array",
            "items": {
              "title": "Dish",
              "type": "object",
              "properties": {
                "_id": { "type": "string", "pattern": "^[0-9a-fA-F]{24}$" },
                "name": {
                  "type": "string",
                  "description": "Dish name (2-100 chars)",
                  "pattern": "^[a-zA-Z0-9 '-]{2,100}$"
                },
                "description": { "type": "string" },
                "price": { "type": "number", "minimum": 0 }
              },
              "required": ["name", "price"]
            }
          }
        },
        "required": ["dishes"]
      }
    },
    "orders": {
      "type": "array",
      "description": "Order collection",
      "items": {
        "title": "Order",
        "type": "object",
        "properties": {
          "_id": { "type": "string", "pattern": "^[0-9a-fA-F]{24}$" },
          "client_id": { "type": "string", "pattern": "^[0-9a-fA-F]{24}$" },
          "waiter_id": { "type": "string", "pattern": "^[0-9a-fA-F]{24}$" },
          "expectedDeliveryTime": { "type": "string", "format": "date-time" },
          "items": {
            "type": "array",
            "items": {
              "title": "OrderItem",
              "type": "object",
              "properties": {
                "dish_id": { "type": "string", "pattern": "^[0-9a-fA-F]{24}$" },
                "quantity": { "type": "integer", "minimum": 1 }
              },
              "required": ["dish_id", "quantity"]
            },
            "minItems": 1
          }
        },
        "required": ["client_id", "items"]
      }
    }
  }
}
